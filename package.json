{
  "name": "cloudflare-dyndns-worker",
  "version": "0.1.0",
  "description": "Minimal Cloudflare DynDNS worker for updating DNS records",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir=dist --target=bun",
    "build:check": "tsc --noEmit",
    "test": "bun test",
    "test:run": "bun test",
    "test:coverage": "bun test --coverage"
  },
  "keywords": [
    "cloudflare",
    "dns",
    "dyndns",
    "ddns"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.3.3"
  }
}
